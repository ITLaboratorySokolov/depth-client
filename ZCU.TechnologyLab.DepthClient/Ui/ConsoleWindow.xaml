<Window x:Class="ZCU.TechnologyLab.DepthClient.Ui.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZCU.TechnologyLab.DepthClient.Ui"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModels="clr-namespace:ZCU.TechnologyLab.DepthClient.ViewModels"
        mc:Ignorable="d"
        Title="Console" Height="300" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox Name="consoleTXT" TextWrapping="Wrap" Background="Black" Foreground="White" 
                 IsReadOnly="True" Text="{Binding Path=ConsData.ConsoleText}" Margin="5,5,5,5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <i:Interaction.Behaviors>
                <local:PutCursorAtEndTextBoxBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>
        
    </Grid>
</Window>
